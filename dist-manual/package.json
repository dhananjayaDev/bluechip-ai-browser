{
  "name": "bluechip-ai-browser",
  "version": "1.0.0",
  "description": "AI-powered desktop browser by Bluechip Technologies Asia - We Build AI Future",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:next": "next dev -p 3000",
    "dev:electron": "wait-on http://localhost:3000 && npx electron .",
    "build:next": "next build",
    "build:win": "npm run build:next && cross-env NODE_ENV=production electron-builder --win",
    "build:win-dev": "npm run build:next && cross-env NODE_ENV=production electron-builder --win --config.win.sign=false",
    "build:win-no-sign": "npm run build:next && cross-env NODE_ENV=production CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win --config.win.sign=false",
    "build:mac": "npm run build:next && cross-env NODE_ENV=production electron-builder --mac",
    "build:linux": "npm run build:next && cross-env NODE_ENV=production electron-builder --linux",
    "build:all": "npm run build:next && cross-env NODE_ENV=production electron-builder --win --mac --linux",
    "dist": "npm run build:next && cross-env NODE_ENV=production electron-builder --publish=never",
    "start": "next start",
    "lint": "next lint",
    "download-dialogpt": "node scripts/downloadDialogGPT.js",
    "convert-dialogpt": "python scripts/convertDialogGPT.py",
    "test-dialogpt": "node scripts/testDialogGPT.js",
    "setup-dialogpt": "npm run download-dialogpt && npm run convert-dialogpt"
  },
  "keywords": [
    "browser",
    "electron",
    "ai",
    "gemini",
    "desktop"
  ],
  "author": "Bluechip Technologies Asia",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "next": "^14.0.0",
    "typescript": "^5.0.0",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.2.0",
    "@heroicons/react": "^2.2.0",
    "autoprefixer": "^10.4.0",
    "axios": "^1.12.2",
    "better-sqlite3": "^12.4.1",
    "buffer": "^6.0.3",
    "cheerio": "^1.1.2",
    "dotenv": "^16.6.1",
    "feather-icons": "^4.29.0",
    "onnxruntime-node": "^1.23.0",
    "postcss": "^8.4.0",
    "process": "^0.11.10",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwindcss": "^3.3.0",
    "zustand": "^5.0.7"
  },
  "build": {
    "appId": "com.bluechip.aibrowser",
    "productName": "BlueChip AI Browser",
    "copyright": "Copyright Â© 2025 Bluechip Technologies Asia",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "electron/**/*",
      "out/**/*",
      "node_modules/**/*",
      "database/**/*",
      "lib/**/*",
      "scripts/**/*",
      "public/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "asar": false,
    "asarUnpack": [],
    "extraResources": [
      {
        "from": "database/",
        "to": "database/"
      },
      {
        "from": "lib/",
        "to": "lib/"
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "BlueChip AI Browser",
      "displayLanguageSelector": false,
      "language": "1033"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.productivity",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "dmg": {
      "title": "BlueChip AI Browser ${version}",
      "background": "build/dmg-background.png",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Network",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "publish": null
  }
}
