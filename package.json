{
  "name": "bluechip-ai-browser",
  "version": "1.0.0",
  "description": "AI-powered desktop browser by Bluechip Technologies Asia - We Build AI Future",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:next": "next dev -p 3000",
    "dev:electron": "wait-on http://localhost:3000 && npx electron .",
    "build": "next build && electron-builder",
    "build:next": "next build",
    "start": "next start",
    "lint": "next lint"
  },
  "keywords": [
    "browser",
    "electron",
    "ai",
    "gemini",
    "desktop"
  ],
  "author": "Bluechip Technologies Asia",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "next": "^14.0.0",
    "typescript": "^5.0.0",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.2.0",
    "@heroicons/react": "^2.2.0",
    "autoprefixer": "^10.4.0",
    "buffer": "^6.0.3",
    "dotenv": "^16.6.1",
    "feather-icons": "^4.29.0",
    "postcss": "^8.4.0",
    "process": "^0.11.10",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "sqlite3": "^5.1.0",
    "tailwindcss": "^3.3.0",
    "zustand": "^5.0.7"
  },
  "build": {
    "appId": "com.bluechip.aibrowser",
    "productName": "BlueChip AI Browser - Bluechip Technologies Asia",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "out/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "database/",
        "to": "database/"
      }
    ]
  }
}
